{
	"name": "supeer",
	"version": "0.1.5",
	"description": "Enables peer to peer communication in different contexts using WebRTC.",
	"author": "Brandon Colbert",
	"license": "MIT",
	"main": "./js/main.js",
	"scripts": {
		"build": "tsc",
		"watch": "tsc -w",
		"start": "node .",
		"test": "node mocha --recursive --exit",
		"dist": "pkg ./js/main.js --config package.json"
	},
	"pkg": {
		"assets": "config/**/*",
		"targets": [
			"node16-win-x64",
			"node16-linux-x64"
		],
		"outputPath": "dist"
	},
	"devDependencies": {
		"@types/node": "^16.11.7",
		"@types/uuid": "^8.3.1",
		"@types/websocket": "^1.0.4",
		"@types/ws": "^7.4.7",
		"mocha": "^8.2.1",
		"pkg": "^5.4.1",
		"typescript": "^4.1.3"
	},
	"dependencies": {
		"discord.js": "^13.1.0",
		"source-map-support": "^0.5.19",
		"uuid": "^8.3.2",
		"websocket": "^1.0.33",
		"wrtc": "^0.4.7"
	}
}
